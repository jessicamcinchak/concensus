    .row
      #map
      .col-md-2.legend
        .row
          .col-md-12
            %h4 Choose Base Layers
            .panel-group#accordion
              .panel.base-layer-select-box
                .panel-heading
                  %h6.panel-title
                    %a{ href: "#shapelayers", data: {toggle: "collapse", parent: "#accordion"} } Shape Layers
                #baselayer1.panel-collapse.collapse.in
                  .panel-body
                    %form(role="form")
                      .form-group
                        .radio(data-file="DetroitBG_qgis.geojson" data-name="Census Block Groups (2010)" data-property="NAMELSAD10")
                          %label
                            %input(type="radio" name="layer_data" id="BG2010") Census Block Groups (2010)

                        .radio(data-file="DetroitTract2010.geojson" data-name="Census Tracts (2010)" data-property="NAMELSAD10")
                          %label
                            %input(type="radio" name="layer_data" id="tracts2010") Census Tracts (2010)

                          .radio(data-file="tract_latino_json_2012.geojson" data-name="Tract Latino(2012)" data-property="NAMELSAD10")
                          %label
                            %input(type="radio" name="layer_data" id="tracts_latino_2012") Tract Latino(2012)
                            
                          .radio(data-file="tract_race_2012.geojson" data-name="Tract Race (2012)" data-property="NAMELSAD10")
                          %label
                            %input(type="radio" name="layer_data" id="tract_Race_2012") Tract Race (2012)
